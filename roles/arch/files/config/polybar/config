[module/music]
type = custom/script
exec = ~/.config/polybar/scripts/playerctl.sh
label = %{T2}%{F#b5bd68}%{F-}%{T-}   %output%
interval = 3

[module/time]
type = internal/date
format = %{T3}%{T-}  <label>
time = %a  %H:%M
label = %time%

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/openweathermap.sh
interval = 600
